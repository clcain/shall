#!/bin/bash

set -e
set -o pipefail

if [ -z "$2" ]
then
    echo "Usage: shall GROUP COMMAND ARGS..."
    exit 1
fi

group=$1

if [ -z "$SHALL_DIR" ]
then
    echo "Error: SHALL_DIR is not defined."
    exit 1
fi

shall_logs_dir="$SHALL_DIR/logs/"
shalld "${@:1}"
cd $shall_logs_dir/$group/
tail -n 0 -f *
